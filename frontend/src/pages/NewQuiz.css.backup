.quiz-header {
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20px);
  border: 2px solid transparent;
  background-clip: padding-box;
  border-radius: 16px;
  padding: 1.5rem 2rem;
  margin-bottom: 1.5rem;
  position: relative;
  overflow: hidden;
  animation: headerFloat 0.6s ease-out;
}

.quiz-header::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #ed1e79, #833ab4, #405de6, #5851db, #ed1e79);
  background-size: 300% 300%;
  border-radius: 20px;
  z-index: -1;
  animation: borderGlow 4s ease infinite;
}

@keyframes borderGlow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

@keyframes headerFloat {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.quiz-info {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.quiz-icon {
  font-size: 2.5rem;
  width: 60px;
  height: 60px;
  background: radial-gradient(circle, rgba(237, 30, 121, 0.3), rgba(131, 58, 180, 0.2));
  border: 2px solid rgba(237, 30, 121, 0.5);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 
    0 0 30px rgba(237, 30, 121, 0.3),
    inset 0 0 15px rgba(131, 58, 180, 0.2);
  flex-shrink: 0;
}

.quiz-icon::before {
  content: '';
  position: absolute;
  inset: -2px;
  border-radius: 16px;
  padding: 2px;
  background: linear-gradient(45deg, #ed1e79, #833ab4, #5851db);
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0.5;
}

@keyframes iconPulse {
  0%, 100% { box-shadow: 0 0 40px rgba(237, 30, 121, 0.4), inset 0 0 20px rgba(131, 58, 180, 0.2); }
  50% { box-shadow: 0 0 60px rgba(88, 81, 219, 0.6), inset 0 0 30px rgba(131, 58, 180, 0.3); }
}

@keyframes iconBorderRotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.quiz-title-info h1 {
  font-size: 1.8rem;
  margin: 0 0 0.3rem 0;
  font-weight: 700;
  letter-spacing: -0.02em;
  color: #f1f5f9;
  line-height: 1.2;
}

.quiz-title-info p {
  font-size: 0.95rem;
  margin: 0;
  color: #94a3b8;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.quiz-progress {
  margin-top: 1.5rem;
  padding-top: 1.5rem;
  border-top: 2px solid rgba(237, 30, 121, 0.3);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.8rem;
  margin-bottom: 1rem;
}

.progress-info > span {
  padding: 0.6rem 1.2rem;
  border-radius: 10px;
  font-weight: 700;
  font-size: 0.95rem;
  letter-spacing: 0.03em;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  border: 2px solid;
  position: relative;
  overflow: hidden;
}

.progress-info > span::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transform: rotate(45deg);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.progress-info > span:first-child {
  background: linear-gradient(135deg, #ed1e79, #833ab4);
  border-color: #ed1e79;
  color: #fff;
}

.xp-info {
  background: linear-gradient(135deg, #10b981, #047857);
  border-color: #34d399;
  color: #fff;
  animation: xpGlow 2s ease-in-out infinite;
}

@keyframes xpGlow {
  0%, 100% { box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3); }
  50% { box-shadow: 0 6px 25px rgba(16, 185, 129, 0.6); }
}

.streak-info {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  border-color: #fbbf24;
  color: #fff;
  animation: streakFlame 1.5s ease-in-out infinite;
}

@keyframes streakFlame {
  0%, 100% { 
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4); 
    transform: scale(1);
  }
  50% { 
    box-shadow: 0 6px 30px rgba(245, 158, 11, 0.7); 
    transform: scale(1.05);
  }
}

.score-info {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  border-color: #fcd34d;
  color: #fff;
}

/* Animation XP */
.xp-animation {
  position: absolute;
  top: -30px;
  right: 0;
  background: linear-gradient(45deg, #10b981, #059669);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-weight: bold;
  font-size: 0.9rem;
  animation: xpFlyUp 2s ease-out forwards;
  z-index: 100;
}

@keyframes xpFlyUp {
  0% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  50% {
    opacity: 1;
    transform: translateY(-20px) scale(1.1);
  }
  100% {
    opacity: 0;
    transform: translateY(-40px) scale(0.8);
  }
}

.score-display {
  position: relative;
}

.progress-bar {
  height: 16px;
  background: rgba(15, 23, 42, 0.95);
  border-radius: 12px;
  overflow: hidden;
  position: relative;
  border: 2px solid rgba(237, 30, 121, 0.3);
  box-shadow: 
    inset 0 2px 6px rgba(0, 0, 0, 0.5),
    0 0 20px rgba(237, 30, 121, 0.2);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, 
    #ed1e79 0%, 
    #833ab4 50%, 
    #5851db 100%
  );
  background-size: 200% 100%;
  border-radius: 10px;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-shadow: 
    0 0 25px rgba(237, 30, 121, 0.6),
    inset 0 2px 0 rgba(255, 255, 255, 0.3);
  animation: progressFlow 3s linear infinite;
}

@keyframes progressFlow {
  0% { background-position: 0% 0%; }
  100% { background-position: 200% 0%; }
}

.progress-fill::after {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.5), 
    transparent
  );
  animation: progressShimmer 2s infinite;
}

@keyframes progressShimmer {
  0% { left: -100%; }
  100% { left: 200%; }
}

