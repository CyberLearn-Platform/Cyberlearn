/* Design moderne et colorÃ© pour les quiz */
@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 0.8;
  }
}

.new-quiz-page {
  position: relative;
  min-height: 100vh;
  color: white;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-top: 0;
  overflow: hidden;
}

.new-quiz-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    -45deg,
    #0f172a,
    #1e293b,
    #1e3a8a,
    #1e40af,
    #1d4ed8,
    #2563eb,
    #334155,
    #0f172a
  );
  background-size: 400% 400%;
  animation: gradientShift 30s ease infinite;
  z-index: -2;
}

.new-quiz-page::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 50%, rgba(30, 58, 138, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(37, 99, 235, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 20%, rgba(30, 64, 175, 0.12) 0%, transparent 50%),
    radial-gradient(circle at 60% 60%, rgba(29, 78, 216, 0.08) 0%, transparent 50%);
  animation: pulse 15s ease-in-out infinite;
  z-index: -1;
}

.quiz-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 0.5rem 1rem 2rem 1rem;
}

.quiz-loading, .quiz-error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 70vh;
  text-align: center;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(255,255,255,0.3);
  border-top: 4px solid #ed1e79;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 1rem;
}

.error-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
}

.back-btn {
  padding: 1rem 2rem;
  background: linear-gradient(45deg, #ed1e79, #833ab4);
  border: none;
  border-radius: 25px;
  color: white;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-top: 1rem;
}

.back-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}

