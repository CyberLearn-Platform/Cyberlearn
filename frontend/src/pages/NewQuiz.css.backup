.multiple-choice {
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
}

.option-btn {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  padding: 1.5rem 2rem;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(237, 30, 121, 0.3);
  border-radius: 16px;
  color: #e2e8f0;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: left;
  font-size: 1.1rem;
  font-weight: 500;
  position: relative;
  overflow: hidden;
}

.option-btn::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(237, 30, 121, 0.1), rgba(131, 58, 180, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.option-btn:hover {
  border-color: rgba(237, 30, 121, 0.6);
  transform: translateX(8px) scale(1.02);
  box-shadow: 
    0 8px 25px rgba(237, 30, 121, 0.3),
    0 0 40px rgba(237, 30, 121, 0.2);
}

.option-btn:hover::before {
  opacity: 1;
}

.option-btn.selected {
  background: linear-gradient(135deg, rgba(237, 30, 121, 0.4), rgba(131, 58, 180, 0.4));
  border-color: #ed1e79;
  transform: translateX(12px) scale(1.03);
  box-shadow: 
    0 12px 40px rgba(237, 30, 121, 0.5),
    0 0 60px rgba(237, 30, 121, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  animation: optionSelect 0.4s ease;
}

@keyframes optionSelect {
  0% { transform: translateX(0) scale(1); }
  50% { transform: translateX(16px) scale(1.05); }
  100% { transform: translateX(12px) scale(1.03); }
}

.option-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

.option-letter {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(88, 81, 219, 0.3), rgba(131, 58, 180, 0.3));
  border: 2px solid rgba(88, 81, 219, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  font-size: 1.3rem;
  color: #fff;
  flex-shrink: 0;
  box-shadow: 0 0 20px rgba(88, 81, 219, 0.3);
  transition: all 0.3s ease;
}

.option-btn:hover .option-letter {
  background: linear-gradient(135deg, rgba(88, 81, 219, 0.5), rgba(131, 58, 180, 0.5));
  box-shadow: 0 0 30px rgba(88, 81, 219, 0.6);
  transform: scale(1.1);
}

.option-btn.selected .option-letter {
  background: linear-gradient(135deg, #ed1e79, #833ab4);
  border-color: #ed1e79;
  box-shadow: 
    0 0 40px rgba(237, 30, 121, 0.8),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  transform: scale(1.15);
  animation: letterPulse 0.6s ease infinite;
}

@keyframes letterPulse {
  0%, 100% { box-shadow: 0 0 40px rgba(237, 30, 121, 0.8), inset 0 1px 0 rgba(255, 255, 255, 0.3); }
  50% { box-shadow: 0 0 50px rgba(88, 81, 219, 0.9), inset 0 1px 0 rgba(255, 255, 255, 0.4); }
